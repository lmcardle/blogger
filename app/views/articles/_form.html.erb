<%= form_for(@article) do |f| %>
  
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>
  
  <% if @article.image_file_name %>
    <p><%= image_tag @article.image.url %></p>
  <% end %>
  <p>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </p>
  
  <p>
    <%= f.submit "Create new Article" %>
  </p>
  
<% end %>